# API Server Configuration
PORT=3456

# Network binding
# Default: 127.0.0.1 (localhost only, safest)
# For LAN access (e.g., testing from another device): HOST=0.0.0.0
HOST=127.0.0.1

# Data paths
DATABASE_PATH=./data/cards.db
STORAGE_PATH=./storage

# Size limits (defaults are generous for large Voxta packages)
# MAX_CARD_SIZE_MB=300
# MAX_PNG_SIZE_MB=300
# WARN_PNG_SIZE_MB=100
# WARN_CARD_SIZE_MB=50
# ZIP_MAX_UNCOMPRESSED_SIZE_MB=500
# ZIP_MAX_FILE_SIZE_MB=50

# Security
# Rate limiting (enabled by default)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=60000

# CORS: comma-separated origins, or '*' for all (DEV ONLY)
# Default: localhost only. Add your LAN origins if needed.
# CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://192.168.1.100:5173

# Proxy trust (set to 1 when behind nginx/reverse proxy)
# TRUST_PROXY=1

# Federation (optional)
# Exposes ActivityPub-style routes under /api/federation/*
# FEDERATION_ENABLED=false
