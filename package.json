{
  "name": "card-architect",
  "version": "0.1.0",
  "private": true,
  "description": "Card Architect - CCv2/CCv3 character card editor",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:fresh": "npm run build:packages && npm run dev",
    "dev:api": "npm run dev --workspace=@card-architect/api",
    "dev:web": "npm run dev --workspace=@card-architect/web",
    "build": "npm run build:packages && npm run build:apps",
    "build:packages": "npm run build --workspace=@card-architect/defaults && npm run build --workspace=@card-architect/plugins --if-present",
    "build:apps": "npm run build --workspace=@card-architect/api && npm run build --workspace=@card-architect/web",
    "build:api": "npm run build --workspace=@card-architect/api",
    "build:web": "npm run build --workspace=@card-architect/web",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:export": "playwright test card-export.spec.ts",
    "test:e2e:ui-elements": "playwright test ui-elements.spec.ts",
    "test:e2e:parity": "playwright test parity.spec.ts",
    "test:e2e:import": "playwright test real-cards-import.spec.ts",
    "test:e2e:export-real": "playwright test real-cards-export.spec.ts",
    "test:e2e:roundtrip": "playwright test real-cards-roundtrip.spec.ts",
    "test:e2e:cross-platform": "playwright test cross-platform.spec.ts",
    "test:e2e:real-cards": "playwright test real-cards-*.spec.ts",
    "test:e2e:report": "playwright show-report",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist packages/*/dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.17.0",
    "playwright": "^1.57.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.18.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@character-foundry/character-foundry": "^0.1.0",
    "@character-foundry/charx": "^0.0.3",
    "@character-foundry/core": "^0.0.2",
    "@character-foundry/federation": "^0.1.5",
    "@character-foundry/loader": "^0.1.6",
    "@character-foundry/png": "^0.0.3",
    "@character-foundry/schemas": "^0.1.0",
    "@character-foundry/voxta": "^0.1.6",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.39.2",
    "@types/uuid": "^10.0.0",
    "uuid": "^13.0.0"
  }
}
